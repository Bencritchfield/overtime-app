<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "OverTime app Notification", sticky: false) %>
	<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "OverTime app Notification", sticky: false) %>
	<% else 
	<%= js add_gritter(flash[:notice], title: "OverTime app Notification", sticky: false) %>
<%end%>